[user]
	name = Lucas Vienna
	email = dev@lucasvienna.dev
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGPFw52YFztXRQ6cOImZA0lh7gEMLPD+m7phsS+SyDJe
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	allowedSignersFile = /Users/vienna/.config/git/allowed_signers
[commit]
	gpgsign = true
[tag]
	# This option requires git 2.23+ to work and you must annotate your tags,
	# although -m "" works if you want an empty message.
	gpgSign = true
	forceSignAnnotated = true
	sort = version:refname

[core]
	editor = nvim
	pager = delta
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.config/git/ignore
[init]
	defaultBranch = main
[column]
	ui = auto

[delta]
	navigate = true
[interactive]
	diffFilter = delta --color-only

[merge]
	tool = vimdiff
	conflictstyle = zdiff3
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
	tool = vimdiff
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[difftool]
	prompt = false
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[fetch]
	prune = true
	pruneTags = true
	all = true
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
	autoupdate = true

[alias]
	aliases = !git config -l | grep alias | cut -c 7-
	unstage = reset --soft HEAD^

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
	path = ~/.config/git/config.local
